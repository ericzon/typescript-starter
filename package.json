{
  "name": "typescript-starter",
  "version": "0.0.3",
  "description": "Typescript starter",
  "main": "dist/index.js",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "npm run build && node -r dotenv/config .",
    "watch": "tsc -w",
    "lint:staged": "npm run build && pretty-quick --staged && lint-staged",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "test": "jest --verbose src",
    "coverage": "jest --collect-coverage --verbose src",
    "release": "standard-version",
    "secrets": "git secrets --scan"
  },
  "keywords": [
    "typescript",
    "starter"
  ],
  "author": "Eric Lara",
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/jest": "^26.0.7",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-mock-random": "^1.0.3",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "standard-version": "^8.0.2",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@types/node": "^14.0.26",
    "dotenv": "^8.2.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint:staged && npm run secrets",
      "pre-push": "npm t"
    }
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix"
  }
}
